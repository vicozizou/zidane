	<bean id="breadCrumbBean" class="com.bytepoxic.core.web.faces.bean.common.BreadCrumbBeanImpl">
		<property name="root" value="app.breadcrumb.home|/faces/index.jsf"/>
		<property name="urls">
			<map key-type="java.lang.String" value-type="java.lang.String">
				<entry key="/faces/users/createRole.jsf,/faces/users/viewRole.jsf">
					<list value-type="java.lang.String">
						<value>users.roles.breadcrumb|/faces/users/listRoles.jsf</value>
					</list>
				</entry>
				<entry key="/faces/places/createLocation.jsf,/faces/places/viewLocation.jsf">
					<list value-type="java.lang.String">
						<value>places.locations.breadcrumb|/faces/places/listLocations.jsf</value>
					</list>
				</entry>
			</map>
		</property>
		<property name="useRootWhenUnfound" value="true"/>
	</bean>
</beans>
